<?xml version="1.0" encoding="utf-8"?>
<net.cachapa.expandablelayout.ExpandableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/expandable_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:orientation="vertical"
    app:el_duration="300"
    app:el_expanded="false">


    <LinearLayout
        android:id="@+id/expand_button"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_bg_list_item"
        android:elevation="6dp"
        android:foreground="?selectableItemBackground"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/expand_name"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="제목"
            android:textColor="@color/btn_text_color"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/expand_time"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="시간"
            android:textColor="@color/md_grey_600"
            android:textSize="15sp" />


    </LinearLayout>

    <TextView
        android:id="@+id/expand_button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_blue_grey_50"
        android:clipToPadding="false"
        android:elevation="4dp"
        android:gravity="left|center_vertical"
        android:lineSpacingExtra="15dip"
        android:padding="20dp"
        android:text="Fixed height"
        android:textColor="@color/btn_text_color"
        android:textSize="16sp"
        app:layout_expandable="true" />

</net.cachapa.expandablelayout.ExpandableLinearLayout>


